#!/usr/bin/env ruby
BEGIN {
  if ARGV.include? "-h"
    puts <<HELP
Usage: $ Ruby-Dice [--help]
\u00B7 --help -> Displays this help message
HELP
    exit
  end
}
require "Ruby-Dice"
user = Player.new

until user.score.filled? do
	puts "\n"
	puts "New Turn".center(80)
	puts "\n"
	sleep 0.5
	user.take_turn
end
